{
  "name": "uniblox-ecommerce",
  "version": "1.0.0",
  "description": "Uniblox E-commerce Platform - Full-stack monorepo with React frontend and Express backend",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "npm run build --workspaces",
    "build:server": "npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "test": "npm run test --workspaces",
    "test:server": "npm run test --workspace=server",
    "test:client": "npm run test --workspace=client",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "clean": "npm run clean --workspaces --if-present",
    "start": "npm start --workspace=server",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ecommerce",
    "react",
    "express",
    "typescript",
    "monorepo",
    "jwt",
    "shopping-cart",
    "orders",
    "admin-panel"
  ],
  "author": "Uniblox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uniblox/ecommerce-platform"
  },
  "bugs": {
    "url": "https://github.com/uniblox/ecommerce-platform/issues"
  },
  "homepage": "https://github.com/uniblox/ecommerce-platform#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
